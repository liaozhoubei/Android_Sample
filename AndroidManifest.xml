<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.customviewdemo"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="21" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity android:name="com.example.customviewdemo.MyPopupwindow.MyPopupwindowActivity"></activity>
        <activity android:name="com.example.customviewdemo.MyViewpager.MyViewpagerActivity"></activity>
        <activity android:name="com.example.customviewdemo.Refreshlist.RefreshlistActivity"></activity>
        <activity android:name="com.example.customviewdemo.Sliding.SlidingActivity"></activity>
        <activity android:name="com.example.customviewdemo.Toggleview.ToggleActivity"></activity>
        <activity android:name="com.example.customviewdemo.Animationmenu.AnimationMenuActivity"></activity>
        <activity android:name="com.example.customviewdemo.ProgressBarActivity"></activity>
    </application>

</manifest>
