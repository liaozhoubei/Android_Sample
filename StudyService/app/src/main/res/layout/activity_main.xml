<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp">

    <Button
        android:id="@+id/btn_start_bind_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="开始与绑定服务演示" />

    <Button
        android:id="@+id/btn_callback_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="服务回调 Activity" />

    <Button
        android:id="@+id/btn_aidl_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="跨进程 AIDL" />

    <Button
        android:id="@+id/messager_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Handler 接收服务信息" />
</LinearLayout>